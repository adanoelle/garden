{
  "name": "@garden/components",
  "version": "0.1.0",
  "description": "Garden design system - Lit web components with PC-98 inspired aesthetics",
  "type": "module",
  "main": "./dist/garden-components.js",
  "module": "./dist/garden-components.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/garden-components.js",
      "development": "./src/index.ts"
    },
    "./styles/tokens.css": "./src/styles/tokens.css"
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "preview": "vite preview",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --config web-test-runner.config.single.mjs",
    "test:coverage": "web-test-runner --coverage"
  },
  "dependencies": {
    "@garden/types": "workspace:*",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@strudel/web": "^1.2.6",
    "@tauri-apps/api": "^2.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/sinon": "^21.0.0",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "playwright": "^1.49.0",
    "sinon": "^21.0.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0"
  },
  "peerDependencies": {
    "@strudel/web": "^1.0.0",
    "@tauri-apps/api": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@strudel/web": {
      "optional": true
    },
    "@tauri-apps/api": {
      "optional": true
    }
  }
}
